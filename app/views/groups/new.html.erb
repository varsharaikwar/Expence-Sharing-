<h1 class="mt-3"> Add a New Group! </h1>


<div class="card">

  <div class="card-body">
    <%= form_for @group, class: 'new-group-form' do |f| %>  
      <div class="mb-3">
        <%= f.label :name, for: "exampleInputEmail1", class: "form-label" %>
        <%= f.text_field :name, required: true , class: "form-control", id: "exampleInputEmail1"%></br>
      </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>

</div>


