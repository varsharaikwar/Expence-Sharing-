!!!
%html
  %head
    = csrf_meta_tags
    %title expensiv
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %link{href: "https://fonts.googleapis.com/css?family=Raleway:400,400i|Roboto+Slab:400,700", rel: "stylesheet"}

  %body
   
    - if current_user
      %p= "Welcome #{current_user.name}"
    .flash
      %p.notice= notice
    %header
      
      = link_to 'Your Groups', user_groups_path(current_user) if current_user
      = link_to 'Sign Out', destroy_user_session_path, method: :delete if current_user

    .view-content
      = yield
