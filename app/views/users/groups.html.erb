
<div class="row mt-2">
  <div class="col-lg-6">
  <h2><%= @user.name %>'s Groups:</h2>
  </div>
  <div class="col-lg-6 text-right">
  
  <p class="mt-3"><%= link_to "Create New Group", new_group_path, class: "badge rounded-pill bg-primary" %></p>
  
  </div>
  
  <div class="col-lg-12">
  <hr>
  <ul class="">
    <% @user.groups.each do |group| %>
      <li><%= link_to group.name, group_user_path(group, @user) %></li>
    <% end %>
  </ul>
  </div>
</div>


